                    borderColor: '#94A3B8',
                    pointBackgroundColor: 'transparent',
                    pointBorderColor: 'transparent',
                    borderWidth: 2,
                    borderDash: [5, 5]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    r: {
                        angleLines: { color: '#E2E8F0' },
                        grid: { color: '#E2E8F0' },
                        pointLabels: {
                            font: { size: 11, weight: '600' },
                            color: '#475569'
                        },
                        ticks: { display: false, max: 100 }
                    }
                },
                plugins: {
                    tooltip: commonTooltip,
